<style>
  .search-banner {
    background: #fff;
    position: relative;
    overflow: hidden;
    padding: 3% 0 0 !important;

  }

  .section.section-boxed.search-banner {
    box-shadow: unset !important;
  }

  .cloud-one {
    position: absolute;
    top: 4%;
    right: 6%;
  }
  .cloud-two {
    position: absolute;
    top: 15%;
    right: 10%;
  }
  .cloud-three {
    position: absolute;
    top: 7%;
    right: 20%;
  }
  .cloud-five {
    position: absolute;
    top: 7%;
    left: 10%;
  }
  .cloud-six {
    position: absolute;
    top: 20%;
    left: 3%;
  }

  .phonecheck-text {
    text-align: center;
    z-index: 1;
    position: relative;
  }
  .gradient-text {
    background: linear-gradient(88.95deg, #24a1b7 24.38%, #75cf7e 75.62%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    background-clip: text;
  }
  .phonecheck-image {
    margin-top: 40px;
    z-index: 2;
    position: relative;
  }

  .phonecheck-logo{
    position:absolute;
    left:8%;
    top:0
}

@media screen and (max-width:1300px){
  .phonecheck-logo{  left:2%;
  }
}

  .phonecheck-about {
    text-align: center;
    margin: auto;
    max-width: 744px;
        margin-block-start: var(--calculated-section-spacing-block-end) !important;
  }

  .phonecheck-about p {
    margin-top: 20px;
    color: rgba(101, 101, 101, 1);
  }

  .phonecheck-point {
    text-align: center;
    margin: auto;
  }

  .phonecheck-point-list {
    margin-top: 50px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 16px 72px;
  }

  .grading-guide{
    padding-block-end:0px !important;
}

  .condition-container {
    margin-top: 50px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .condition-item {
    border: 1px solid #EBEBEB;
    background: #FFFFFF;
    border-radius: 12px;
    padding: 16px;
    container-type: inline-size;
  }

  .img-even-columns {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    margin-top:12px;
  }

  .condition-description{
    color: #282828;
}
.Condition-details{
    min-height:170px
}

.img-bg{
    border-radius:16px;
}

.likenew-img-bg{background-color:#dff7ff}
.verygood-img-bg{background-color:#ececec}
.fair-img-bg{background-color:#ffe3e3}
.excellent-img-bg{background-color:#fbffee}

.img-even-columns .img-bg:first-child{
    display:flex;
    justify-content:center;
    align-items:flex-end;
}

.img-even-columns .img-bg:last-child{
    display:flex;
    justify-content:center;
    align-items:flex-start;
}

@media screen and (max-width:900px){
 
.Condition-details {
    min-height: unset;
}
}

  @media screen and (max-width: 590px) {
    .phonecheck-point-list {
      grid-template-columns: 1fr 1fr;
      gap: 10px 50px;
    }
    .phonecheck-point-list {
      text-align: left;
      line-height: 16px;
    }
  }

  @container (max-width: 386px) {
    .img-even-columns {
      grid-template-columns: repeat(1, 1fr);
    }
  }

  @media screen and (max-width: 900px) {
    .condition-container {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>

