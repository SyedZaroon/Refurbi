<div class="section   section-blends section-full" >
  <div class="bento-grid">
    <div class="item galaxy-watch">
      <span class="galaxy-watch-text bold text ">Galaxy Watch</span>
      <div class="circle-gradient"></div>
      <div class="galaxy-watch-img">
        <img src="{{ 'Galaxywatch.png' | asset_url }}" width="100%" height="100%" alt="Galaxy Watch">
      </div>
    </div>
    <div class="item galaxy-tab">
      <span class="galaxy-tab-text bold text">Galaxy Tab</span>
      <div class="galaxy-tab-img">
        <img src="{{ 'glaxytab.png' | asset_url }}" width="100%" height="100%" alt="Galaxy Tab">
      </div>
    </div>
    <div class="item google-pixel">
      <span class="google-pixel-text bold text">Google Pixel</span>
      <div class="google-pixel-img">
        <img src="{{ 'googlepixel.png' | asset_url }}" width="100%" height="100%" alt="Google Pixel">
      </div>
    </div>
    <div class="item samsung-galaxy">
      <span class="samsung-galaxy-text bold h6 text ">Samsung Galaxy</span>
      <div class="samsung-galaxy-overlay"></div>
      <div class="samsung-galaxy-img">
        <img src="{{ 'SamsungGalaxy.png' | asset_url }}" width="100%" height="100%px" alt="Samsung Galaxy">
      </div>
    </div>
    <div class="item iphone">
      <span class="iphone-text bold h2 text ">iPhone</span>
      <div class="iphone-siriglow">
        <img src="{{ 'siriglow.png' | asset_url }}" width="100%" height="100%" alt="Siri Glow">
      </div>
      <div class="iphone-img">
        <img src="{{ 'iphoneimg.png' | asset_url }}" width="100%" height="100%" alt="iPhone">
      </div>
    </div>
    <div class="item apple-watch">
      <span class="apple-watch-text bold h3 text ">Apple Watch</span>
      <div class="apple-watch-ellipse-up"></div>
      <div class="apple-watch-img-up">
        <img src="{{ 'applewatchup.png' | asset_url }}" width="100%" height="100%" alt="Apple Watch Up">
      </div>
      <div class="apple-watch-ellipse-down"></div>
      <div class="apple-watch-img-down">
        <img src="{{ 'applewatchdown.png' | asset_url }}" width="100%" height="100%" alt="Apple Watch Down">
      </div>
    </div>
    <div class="item ipad">
      <span class="ipad-text bold h3 text ">iPad</span>
      <div class="ipad-img">
        <img src="{{ 'ipad.png' | asset_url }}" width="100%" height="100%" alt="iPad">
      </div>
    </div>
  </div>
</div>

<style>
 .item {
  overflow: hidden;
  position: relative;
  border-radius: 16px;
  transition: all 0.3s ease-in-out;
  cursor:pointer;
}

.item::after {
  content: "â†’";
  position: absolute;
  width: 30px;
  height: 20px;
  right: 0;
  top: 20px;
  opacity: 0;
  transform: translateX(-30px);
  transition: all 0.3s ease-in-out;
  pointer-events: none;
}

.item:hover::after {
  opacity: 1;
  transform: translateX(0);
}

  .item img {
  transition: all 0.3s ease-in-out;
}

.item:hover img:not(.iphone-siriglow) {
  transform: scale(1.1);
}
.item:hover .iphone-siriglow img {
  transform: none;
}
