<div {% render 'section-properties' %}>
  <div class="what-in-the-box">

    <div class="table-container">
    <h3 class="h3 bold" style="margin-bottom:10px" >Product Specificatoin </h3>
    
<div class="specification">
  {% for i in (1..5) %}
    {% assign heading_key = "heading" | append: i %}
    {% assign value_key = "value" | append: i %}
    {% assign heading = section.settings[heading_key] %}
    {% assign value = section.settings[value_key] %}

    {% if heading != blank and value != blank %}
      <div class="row">
        <div class="feature-chart__heading bold">{{ heading }}</div>
        <div class="feature-chart__value prose text-subdued">{{ value }}</div>
      </div>
    {% endif %}
  {% endfor %}
</div>


    </div>

    <div class="product-specification-section-box">

            <svg class="product-specification-section-box-icon" viewBox="0 0 234 74" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path d="M0 20C0 8.95431 8.95431 0 20 0H214C225.046 0 234 8.9543 234 20V74H0V20Z" fill="currentColor">
                </path>
                <rect x="58" y="32" width="118" height="19" rx="9.5" class="fill"></rect>
                <circle cx="117.5" cy="32.5" r="11.5" class="fill"></circle>
            </svg>

            <h3 class="h3 bold" style="margin-bottom:10px" >Include in the Box</h3>

            <div class="product-specification-section-box-images">
  {% for i in (1..5) %}
    {% assign image_key = "image_" | append: i %}
    {% assign text_key = "text_" | append: i %}
    {% assign image = section.settings[image_key] %}
    {% assign text = section.settings[text_key] %}

    {% if image != blank and text != blank %}
      <div class="product-specification-section-box-images-main">
        <div class="product-specification-section-box-images-image product-specification-section-box-images-image{{ i }}">
          <img src="{{ image | img_url: '500x' }}" alt="{{ text }}" width="" height="" > 
        </div>
        <span class="feature-chart__heading bold">{{ text }}</span>
      </div>
    {% endif %}
  {% endfor %}
</div>


        </div>


  </div>
</div>

{% endif %}


