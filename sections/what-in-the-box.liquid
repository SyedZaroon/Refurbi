<style>
  .table-container {
            width: 69%;
            background: #E5E5E5;
            border-radius: 10px;
            padding: 25px 48px;

        }
        .row {
            display: flex;
            justify-content: space-between;
            padding: 15px 10px;
            font-size: 16px;
            font-weight: bold;
        }
        .row:not(:last-child) {
            border-bottom: 1px solid #ddd;
        }
        .value {
            font-weight: normal;
            color: #666;
        }


        
.product-specification-section-box {
    padding: 25px 48px;
    background-color: #F9F9F9;
    width: 30%;
    border-radius: 10px;
    position: relative;
    height:fit-content;
}

.product-specification-section-box-icon {
    position: absolute;
    top: -70px;
    left: 50%;
    transform: translatex(-50%);
    width:220px;
}

.product-specification-section-box-icon .fill {
    fill: #fff;
}


.product-specification-section-box-images {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 20px;
    align-items: start;
    justify-content: center;
    text-align:center;

}

.product-specification-section-box-images-image {
    background-color: white;
    padding: 20px;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 96px;
    width: 96px;
}

.product-specification-section-box-images-main {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-direction: column;
    align-items: center;
    flex-basis: 44%;
    margin-top: 20px;
}

.product-specification-section-box-images-main>span {
    width: 70%;

}

.product-specification-section-answers {
    display: grid;
    grid-template-columns: 1fr 1fr;
    row-gap: 30px;
}

.product-specification-section-answers strong {
    margin-bottom: 10px;
    display: block;
}

.what-in-the-box{

display:flex;
justify-content:space-between;
}

.specification{
display:flex;
flex-direction:column;
gap:30px;
}

@media (max-width:900px){
.what-in-the-box{
flex-direction:column;
gap:120px;
}

.table-container,.product-specification-section-box{
width:100%;
}

.product-specification-section-box-images-main{
flex-basis:31%;
}
}

@media (max-width:567px){
.product-specification-section-box-images-main{
flex-basis:100%;
}
}

</style>

{%- comment -%}
